pipeline {
    agent any
   
  parameters{
        string(defaultValue: "Hello", description: 'Arg1 ? ', name: 'argument1')
    }
  stages{
    stage('api call'){
      environment {
        FLOWSERVER = credentials('flow-server-url')
      }
      steps{
        withCredentials([usernamePassword(credentialsId: 'flow-admin-creds', passwordVariable: 'vPassword', usernameVariable: 'vUser')]) {
            sh """
                curl -D- -vvv -u $vPassword:$vUser --insecure -X POST "${FLOWSERVER}/rest/v1.0/jobs?request=runProcedure&projectName=Default&procedureName=Echo" -H "accept: application/json" -d '{"actualParameter":[{"actualParameterName":${params.arg1},"value":"new1234"}]}'
            """
        
        }   
      }
    }
  }
}
